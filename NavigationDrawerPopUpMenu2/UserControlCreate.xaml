<UserControl x:Class="NavigationDrawerPopUpMenu2.UserControlCreate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NavigationDrawerPopUpMenu2"
             mc:Ignorable="d" 
             >
    <Grid>
        <StackPanel>
            <TextBlock Text="Електронна пошта" Margin="10,10,0,0" Foreground="Black"/>
            <TextBox x:Name="textBox1" Height="30" Width="300" 
                     SelectionBrush="Blue" Foreground="Black" Background="White"
                     HorizontalAlignment="Left" 
                     Margin="10,10,0,0" />
            <TextBlock Text="П.І.Б. Студента" Margin="10,10,0,0" Foreground="Black"/>
            <TextBox x:Name="textBox2" Height="30" Width="300" 
                     SelectionBrush="Blue" Foreground="Black" Background="White"
                     HorizontalAlignment="Left" 
                     Margin="10,10,0,0" />
            <Button Content="Записати дані" Height="30" Width="150" Click="Button_Click" 
                    Margin="75,10,0,0" HorizontalAlignment="Left" />
        </StackPanel>
    </Grid>
</UserControl>
